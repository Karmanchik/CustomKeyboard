<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    >


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/circle_placeholder"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:paddingEnd="5dp"
            android:gravity="end"
            android:paddingBottom="0dp"
            >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/edit_avatar" />
        </LinearLayout>
    </RelativeLayout>

    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="21dp"
        app:title="Имя"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        app:title="Фамилия"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        app:title="E-mail"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.5"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
    android:fontFamily="@font/lato"
    android:lineSpacingMultiplier="1.6"
    android:text="Телефон"
    android:textColor="@color/black"
    android:textSize="10sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:paddingTop="4dp"
        android:layout_marginEnd="12dp"
        android:hint="0000000000"
        android:textSize="18dp"
        android:fontFamily="@font/lato"
        android:inputType="phone"
        android:typeface="monospace"
        app:allowed_chars="1234567890"
        app:keep_hint="true"
        app:mask="+7(###)###-##-##"
        android:backgroundTint="#A1A1A1"
        />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:text="Выйти"
        android:textColor="#DB5249"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

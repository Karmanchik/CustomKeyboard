<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/header_placeholder" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="60dp"
            android:paddingBottom="0dp"
            app:srcCompat="@drawable/edit_avatar" />
    </RelativeLayout>

    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="21dp"
        app:title="Имя"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        app:title="Фамилия"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        app:title="E-mail"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <house.with.swimmingpool.views.CustomEditField
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="5dp"
        app:title="Телефон"
        android:paddingBottom="0dp"
        app:buttonMode="true"
        app:passwordMode="false"
        android:id="@+id/variable_et4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Выйти"
        android:textColor="#DB5249"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/header_placeholder" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="60dp"
            android:paddingBottom="0dp"
            app:srcCompat="@drawable/edit_avatar" />
    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/description_to_profile_fields"
            android:layout_marginTop="21dp"
            android:text="Имя"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#0000A8FF"
        android:hint="Введите Имя"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeColor="#A1A1A1"
        app:boxStrokeErrorColor="#DB5249"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonName6"
            style="@style/profile_fields_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="14dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#0000A8FF"
        android:hint="Введите фамилию"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeColor="#A1A1A1"
        app:boxStrokeErrorColor="#DB5249"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonNameSurname"
            style="@style/profile_fields_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#0000A8FF"
        android:hint="Введите Email"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeColor="#A1A1A1"
        app:boxStrokeErrorColor="#DB5249"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonEmail"
            style="@style/profile_fields_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#0000A8FF"
        android:hint="Введите телефон"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeColor="#A1A1A1"
        app:boxStrokeErrorColor="#DB5249"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonPhone"
            style="@style/profile_fields_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:text="Выйти"
        android:textColor="#DB5249"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:windowSoftInputMode="adjustResize">

    <house.with.swimmingpool.views.CustomEditField
        android:id="@+id/oldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:paddingBottom="0dp"
        android:textCursorDrawable="@null"
        app:buttonMode="true"
        app:passwordMode="true"
        app:title="Старый пароль" />

    <house.with.swimmingpool.views.CustomEditField
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:paddingBottom="0dp"
        android:textCursorDrawable="@null"
        app:buttonMode="true"
        app:passwordMode="false"
        app:title="Новый пароль" />

    <house.with.swimmingpool.views.CustomEditField
        android:id="@+id/new_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:paddingBottom="0dp"
        android:textCursorDrawable="@null"
        app:buttonMode="true"
        app:passwordMode="false"
        app:title="Повторить пароль" />

    <TextView
        android:id="@+id/errorPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato"
        android:text="Введите от 6 до 10 символов (кроме */-.\”% )"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/buttonSave"
            style="@style/main_button"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:elevation="8dp"
            android:enabled="false"
            android:text="Сохранить" />
    </RelativeLayout>

</LinearLayout>
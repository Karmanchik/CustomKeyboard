<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Восстановление доступа"
        android:fontFamily="@font/lato_medium"
        android:textSize="15dp"
        android:textColor="#A0AABA"/>

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/phone_input"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:hint="0000000000"
        android:inputType="phone"
        android:textSize="24sp"
        android:fontFamily="@font/lato"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:typeface="monospace"
        app:allowed_chars="1234567890"
        app:keep_hint="true"
        app:mask="+7(###)###-##-##" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="30dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/errorPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/lato"
        android:textSize="13dp"
        android:visibility="invisible"
        android:textColor="#DB5249"
        android:text="Этот телефон уже зарегистрирован. Попробуйте войти"/>


    <TextView
        android:id="@+id/enterButton"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="0"
        android:elevation="0dp"
        android:enabled="true"
        android:fontFamily="@font/lato"
        android:text="Продолжить" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="68dp"
        android:gravity="center"
        android:fontFamily="@font/lato"
        android:textSize="12dp"
        android:textColor="#80000000"
        android:text="на номер телефона прийдет код доступа для входа в приложение" />


</LinearLayout>